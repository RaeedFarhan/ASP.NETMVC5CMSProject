@model IEnumerable<Content_Management_System.Models.Item>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Items
            <small>All Items</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">@Html.ActionLink("Create New Item", "Save", "Items", new { @class = "btn btn-primary" })</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Menu</th>
                                    <th>Category</th>
                                    <th>Language</th>
                                    <th>Is Active</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var itemItem in Model)
                                {
                                    <tr>
                                        <td>@itemItem.Title</td>
                                        <td>@itemItem.MenuId</td>
                                        <td>@itemItem.CategoryId</td>
                                        <td>@itemItem.Language.Name</td>
                                        <td>@itemItem.IsActive</td>
                                        <td>@Html.ActionLink("Edit", "Edit", "Items", new { id = itemItem.Id }, "")</td>
                                        <td>@Html.ActionLink("Delete", "Delete", "Items", new { id = itemItem.Id }, "")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Title</th>
                                    <th>Menu</th>
                                    <th>Category</th>
                                    <th>Language</th>
                                    <th>Is Active</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>