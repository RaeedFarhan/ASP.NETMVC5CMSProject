@model Content_Management_System.ViewModels.ItemFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Create
            <small>Item</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <!-- form start -->

                    @using (Html.BeginForm("Save", "Items"))
                    {
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(i => i.Item.Title)
                                @Html.TextBoxFor(i => i.Item.Title, new { @class = "form-control", placeholder = "Enter..." })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(i => i.Item.MenuId)
                                @Html.DropDownListFor(i => i.Item.MenuId, new SelectList(Model.MenuNames, "MenuId", "Name"), "Select Menu Parent..", new { @class = "form-control select2" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(i => i.Item.CategoryId)
                                @Html.DropDownListFor(i => i.Item.CategoryId, new SelectList(Model.CategoryNames, "CategoryId", "Name"), "Select Category Parent..", new { @class = "form-control select2" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(i => i.Item.Info)
                                @Html.TextAreaFor(i => i.Item.Info, new { @class = "form-control", placeholder = "Enter...", rows = "3" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(i => i.Item.Description)
                                @Html.TextAreaFor(i => i.Item.Description, new { @class = "form-control", placeholder = "Enter...", rows = "6" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(i => i.Item.Image)
                                @Html.TextBoxFor(i => i.Item.Image, new { @class = "form-control", placeholder = "Enter..." })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(i => i.Item.LanguageId)
                                @Html.DropDownListFor(i => i.Item.LanguageId, new SelectList(Model.Languages, "Id", "Name"), "Select Language..", new { @class = "form-control select2" })
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.CheckBoxFor(i => i.Item.IsActive, new { @class = "minimal" }) Is Active
                                </label>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            @Html.HiddenFor(i => i.Item.Id)
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    }
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->