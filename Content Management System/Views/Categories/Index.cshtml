@model IEnumerable<Content_Management_System.Models.CategoryName>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Categories
            <small>All Items</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">@Html.ActionLink("Create New Item", "Save", "Categories", new { @class = "btn btn-primary" })</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Parent Category</th>
                                    <th>Is Active</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var categoryItem in Model)
                                {
                                    <tr>
                                        <td>@categoryItem.Name</td>
                                        <td>@categoryItem.Category.ParentCategoryId</td>
                                        <td>@categoryItem.Category.IsActive</td>
                                        <td>@Html.ActionLink("Edit", "Edit", "Categories", new { id = categoryItem.CategoryId }, "")</td>
                                        <td>@Html.ActionLink("Delete", "Delete", "Categories", new { id = categoryItem.CategoryId }, "")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Parent Category</th>
                                    <th>Is Active</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>